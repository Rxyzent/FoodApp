<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detail.DetailFragment">

    <FrameLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:background="@color/white"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/back"
            android:layout_gravity="start|center"
            android:background="@drawable/ic_baseline_arrow_back"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/favorite"
            android:layout_gravity="end|center"
            android:background="@drawable/ic_baseline_favorite_border"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mealName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp"
                tools:text="Apple Pie From Scratch"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_access_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mealName"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/timeStr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/time"
                app:layout_constraintBottom_toBottomOf="@id/time"
                android:text="Ready in "
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/time"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/timeStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/time"
                app:layout_constraintBottom_toBottomOf="@id/time"
                app:layout_constraintStart_toEndOf="@id/timeStr1"
                android:textSize="14sp"
                tools:text=" 30 minutes"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_thumb_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/likeStr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/like"
                app:layout_constraintBottom_toBottomOf="@id/like"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="248"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/like"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/likeStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/like"
                app:layout_constraintBottom_toBottomOf="@id/like"
                app:layout_constraintStart_toEndOf="@id/likeStr1"
                android:textSize="14sp"
                android:text=" users would make this again"/>

            <ImageView
                android:id="@+id/video"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@id/like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/video"
                app:layout_constraintBottom_toBottomOf="@id/video"
                app:layout_constraintStart_toStartOf="@id/video"
                app:layout_constraintEnd_toEndOf="@id/video"
                android:background="@drawable/ic_baseline_play_circle_filled"/>
            <TextView
                android:id="@+id/ingredientFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients for"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/video"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/numServings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ingredientFor"
                app:layout_constraintStart_toStartOf="@id/ingredientFor"
                tools:text="8 servings"
                android:textSize="16sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredientList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/numServings"
                android:layout_marginTop="7dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/preparation"
                app:layout_constraintTop_toBottomOf="@id/ingredientList"
                android:layout_marginTop="7dp"
                android:background="#F3F3F3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/preparationStr"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Preparation"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/stepBystep"
                    app:layout_constraintTop_toBottomOf="@id/preparationStr"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/pink"
                    app:cardCornerRadius="8dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="7dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Step-by-step mode ->"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                </androidx.cardview.widget.CardView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/preparationList"
                    app:layout_constraintTop_toBottomOf="@id/stepBystep"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="7dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>